<?xml version="1.0" encoding="utf-8"?>
<!-- 注意添加数据绑定命名空间 -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- 声明要绑定的数据模型 -->
    <data>
        <!-- 导入实体类 -->
        <variable
            name="itemData"
            type="com.twd.settingsccx.model.SettingItem" /> <!-- 替换为你的实体类路径 -->
        <variable
            name="viewModel"
            type="com.twd.settingsccx.viewmodel.ProjectorViewModel" />
    </data>

    <!-- 子布局内容 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:onClick="@{() -> viewModel.onItemClick(itemData)}"
        android:onKeyListener="@{(v, keyCode, event) -> viewModel.onKeyLeftRight(keyCode, itemData,event)}"
        android:background="@drawable/projection_item_selector">

        <!-- 图标：绑定src资源 -->
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:imageResource="@{itemData.iconResId}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- 标题：绑定文本内容 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@{itemData.title}"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintHorizontal_weight="6"
            app:layout_constraintStart_toEndOf="@+id/iv_icon"
            app:layout_constraintEnd_toStartOf="@+id/iv_arrow_left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- 左箭头（固定资源，无需绑定） -->
        <ImageView
            android:id="@+id/iv_arrow_left"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_arrow_left"
            app:layout_constraintStart_toEndOf="@+id/tv_title"
            app:layout_constraintEnd_toStartOf="@+id/tv_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="@{itemData.arrow_left}"/>

        <!-- 内容文本：绑定内容 -->
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{itemData.content}"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="2"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@+id/iv_arrow_left"
            app:layout_constraintEnd_toStartOf="@+id/iv_arrow_right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <!-- 右箭头（固定资源，无需绑定） -->
        <ImageView
            android:id="@+id/iv_arrow_right"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintStart_toEndOf="@+id/tv_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="@{itemData.arrow_right}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>